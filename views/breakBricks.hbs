<section id="break-bricks-page">

    <h1>Break Bricks!!</h1>
    <p>Score:</p>
    <p id="score">Not Implemented..</p>
    <style>
        #div1{width: 600px; height: 600px; border: 1px solid black; position: relative; margin: 100px auto}
        #ball{width: 20px; height: 20px; background-color: red; border-radius: 50%; position: absolute}
        #plate{width: 80px; height: 15px; background-color: blue; position: absolute; bottom: 10px;}
        #brick{width: 48px; height: 15px; border: 1px solid black;float: left}
    </style>

    <script>
        window.onload = function(){
            var game = "start"  // a flag variable stating the status of the game (start/over)
            // var score = 0
            var gameSpace = document.getElementById("div1")
            var ballElement = document.getElementById("ball")
            var plateElement = document.getElementById("plate")
            
            plateMove(plateElement)
            createBricks(36)
            var brickElements = gameSpace.querySelectorAll("#brick")

            var horSpeed = parseInt(Math.random()*4) + 3  // ball's horizontal speed
            var verSpeed = parseInt(Math.random()*3) + 5  // ball's vertical speed
            var horDirection = 1  // move rightwards by default
            var verDirection = 1  // move downwards by default

            setInterval(function(){
                ballElement.style.left = ballElement.offsetLeft + horDirection * horSpeed + 'px'
                ballElement.style.top = ballElement.offsetTop + verDirection * verSpeed + 'px'

                if (ballElement.offsetLeft >= 580){
                    horDirection = -1  // move leftwards when touching right edges
                }
                if (ballElement.offsetLeft <= 0){
                    horDirection = 1  // move rightwards when touching left edges
                }
                if (ballElement.offsetTop <= 0){
                    verDirection = 1  // move downwards when touching upper edges
                }

                if (isCollide(ballElement, plateElement, "plate") == 1){  // ball touches plate
                    verDirection = -1  // move upwards when touching plate edges 
                    score += 1
                }

                for (var i=0;i<brickElements.length;i++){
                    if (isCollide(ballElement, brickElements[i], "brick") == 1){  // ball touches brick
                        verDirection = 1  // move downwards when touching brick edges 
                        score += 1
                    }
                }
                
                if (ballElement.offsetTop >= 580){
                    game = "over"  // finish game as the ball falls to the bottom
                    confirm(game)
                    window.location.reload()
                }
                // getElementById("score").innerHTML = score

            }, 30)

        }


        // function for modifying direction
        /*function directionModifier(direction) (
            var modifier = 1
            return (modifier*direction)
        )*/
        

        // function for controlling the plate (to catch the ball)
        function plateMove(item) {
            document.onkeydown = function (event) {
                var plateChangeX = 0
                if (event.keyCode == 37) {  // left arrow key pressed
                    if (item.offsetLeft <= 5){
                        plateChangeX += 0
                    }
                    else{
                        plateChangeX -= 15
                    }
                }
                else if (event.keyCode == 39) {  // right arrow key pressed
                    if (item.offsetLeft >= 515){
                        plateChangeX -= 0
                    }
                    else{
                        plateChangeX += 15
                    } 
                }
                item.style.left = item.offsetLeft + plateChangeX + 'px'
            }
        }


        // function for determining whether the ball collides with something (plate/bricks)
        function isCollide(ball, item, itemName) {
            var itemBottom = parseInt(item.offsetTop) + 34
            var itemLeft = parseInt(item.style.left.slice(0, -2))  // current left edge of the plate/brick
            var ballX = parseInt(ball.style.left.slice(0, -2))  // current x-coordinate of the ball's centre
            var ballY = parseInt(ball.style.top.slice(0, -2)) + 20  // current y-coordinate of the ball's bottom
            
            if (itemName == "plate"){
                var itemRight = parseInt(item.style.left.slice(0, -2)) + 80  // current right edge of the plate
                if (ballY >= 575) {  // reaching the y-coordinate of plate
                    // centre of the ball must lie between the left and right edges of the plate
                    if (itemLeft < ballX && itemRight > ballX) { 
                        return 1
                    }
                }
            }

            if (itemName == "brick"){
                var itemRight = parseInt(item.style.left.slice(0, -2)) + 48  // current right edge of the brick
                if (ballY <= itemBottom){  // reaching the y-coordinate of bricks
                    // centre of the ball must lie between the left and right edges of the brick
                    /*if (itemLeft < ballX && itemRight > ballX) {
                        return 1
                    }*/
                    return 1
                }
            }
            
            return 0  // no collision between ball and plate/bricks
                
        }


        // function for creating a certain number of bricks
        function createBricks(num){
            var gameSpace = document.getElementById("div1")
            for (var i=0;i<num;i++){
                var createdBrick = document.createElement("div")
                createdBrick.id = "brick"
                // createBricks.style = "background-color: green"
                gameSpace.appendChild(createdBrick)
            }
        }
    </script>

    <div id = "div1">
        <div id="ball"></div>
        <div id="plate" style="left: 275px;"></div>
    </div>

</section>